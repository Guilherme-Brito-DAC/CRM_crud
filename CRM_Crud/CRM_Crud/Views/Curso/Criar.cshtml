@model CRM_Crud.Models.Curso

@{
    ViewData["Title"] = "Criar Curso";
}

<div class="item">
    <div class="tablehead">
        <h1 class="titulomid">Curso</h1>
        <a asp-action="Index">Voltar</a>
    </div>
    <hr />
    <div class="form-mid">
        <div class="col">
            <form asp-action="Criar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="titulo" class="control-label"></label>
                    <input asp-for="titulo" class="form-control" />
                    <span asp-validation-for="titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="data_inicio" class="control-label"></label>
                    <input asp-for="data_inicio" class="form-control" id="input_data_inicio" />
                    <span asp-validation-for="data_inicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="data_termino" class="control-label"></label>
                    <input asp-for="data_termino" class="form-control" id="input_data_termino" />
                    <span asp-validation-for="data_termino" class="text-danger" id="label_data_termino"></span>
                </div>
                <div class="form-group">
                    <label asp-for="periodo_letivo" class="control-label"></label>
                    <input asp-for="periodo_letivo" id="input_periodo_letivo" class="form-control" />
                    <span asp-validation-for="periodo_letivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Categoria</label>
                    <select id="categoria" asp-for="categoria" class="form-control">
                        <option value="@Categoria.Agendado">Agendado</option>
                        <option value="@Categoria.ENEM">Enem</option>
                        <option value="@Categoria.CRM4U">CRM4U</option>
                        <option value="@Categoria.Tradicional">Tradicional</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="qnt_de_inscricoes" class="control-label"></label>
                    <input asp-for="qnt_de_inscricoes" class="form-control" />
                    <span asp-validation-for="qnt_de_inscricoes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="reset" value="Limpar" class="btn btn-secondary" />
                    <input type="submit" id="btn_submit" value="Cadastrar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/verificaData.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-mask/dist/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#input_periodo_letivo").mask("0000/0")
        })
    </script>
    <script src="~/js/navbar.js"></script>
}
